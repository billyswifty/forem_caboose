<a name='post-<%= post.id %>'></a>
<div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%> col-md-10'>
  <div class='user col-md-2'>
    <div class='username'>
      <a href="<%= post.user.url %>"><%= post.user.username %></a>
      <%# link_to_if Forem.user_profile_links, post.user.username, [main_app, post.user] %>
    </div>
    <div class='icon'>
      <%= forem_avatar(post.user, :size => 60) %>
    </div>
  </div>

  <div class='contents col-md-7'>
    <time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time>

    <div class="richtext">
      <%== forem_format(post.text) %>
    </div>

    <% if post.reply_to %>
      <span class='in_reply_to'>
        <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user.username}", "#post-#{post.reply_to.id}" %>
      </span>
    <% end %>
  </div>
</div>